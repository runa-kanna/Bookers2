<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>

    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <script src="https://kit.fontawesome.com/a8946225b7.js" crossorigin="anonymous"></script>
    
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>


  <body>
    <header>
    
      <div class="sccial"></div>
        <i class="fa-solid fa-house"></i>
        <i class="fa-solid fa-right-to-bracket"></i>
        <i class="fa-solid fa-user-plus"></i>
        <i class="fa-solid fa-link"></i>
    
      <div class="navgation">  
        <% if user_signed_in? %>
          <div class="nav-list-item">
            <li>
              
              <%= link_to 'Homes', "/books" %>
            </li>
          </div> 
          <div class="nav-list-item">
            <li>
              <%= link_to 'User', user_path(current_user.id) %>
            </li>
          </div>
          <div class="nav-list-item">
            <li>
              <%= link_to "Log out", destroy_user_session_path, method: :delete %>
            </li>
          </div>
          <div class="nav-list-item">
            <li>
              <%= link_to 'books', new_book_path %>
            </li>
          </div>
        </div> 
        
        
       
        <div class="navgation">
        <% else %>
          <div class="nav-list-item">
            <li>
              <%= link_to "Sign in", new_user_registration_path %>
            </li>
          </div>
          <div class="nav-list-item">
            <li>
              <%= link_to "Log in", new_user_session_path %>
            </li>
          </div>
          <div class="nav-list-item">
            <li>
              <%= link_to 'About', about_path %>
            </li>
          </div>
          <div class="nav-list-item">
            <li>
              <%= link_to 'Homes', "/books" %>
            </li>
          </div>
        </div>
      
      
      <% end %>


    </header>

    <%= yield %>

    <footer>
     <p>CopyRight Infratop.inc</p>
    </footer>

  </body>
</html>
