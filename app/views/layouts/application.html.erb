<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>

    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <script src="https://kit.fontawesome.com/a8946225b7.js" crossorigin="anonymous"></script>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>


  <body>
    <header>
      <div class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="navbar-brand" href="/">
            <span>Bookers</span>
          </a>
          <biiton class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </biiton>
        <div class="collapse navbar-collapse" id="navbarNavDropdown" style>
          <ul class="navbar-nav ml-auto">


            <div class="sccial"></div>

          <% if user_signed_in? %>
            <div class="nav-list-item">
              <li>
                <%= link_to user_path(current_user.id) do %>
                 <i class="fa-solid fa-house"></i>Homes
                <% end %>
              </li>
            </div>
            <div class="nav-list-item">
              <li>
                <%= link_to "/users" do %>
                  <i class="fa-solid fa-user-plus"></i>Users
                <% end %>
              </li>
            </div>
            <div class="nav-list-item">
              <li>
                <%= link_to "/books" do %>
                  <i class="fa-solid fa-book"></i>books
                <% end %>
              </li>
            </div>
            <div class="nav-list-item">
              <li>
                <%= link_to  destroy_user_session_path, method: :delete do %>
                  <i class="fa-solid fa-right-from-bracket"></i>Log out
                <% end %>
            </div>





          <div class="navgation">
          <% else %>

            <div class="nav-list-item">
              <li>
                <%= link_to "/" do %>
                <i class="fa-solid fa-house"></i>Homes
                <% end %>
              </li>
            </div>
            <div class="nav-list-item">
              <li>
                <%= link_to about_path  do %>
                <i class="fa-solid fa-link"></i>About
                <% end %>
              </li>
            </div>
            <div class="nav-list-item">
              <li>
                <%= link_to new_user_registration_path do %>
                <i class="fa-solid fa-user-plus"></i>Sign up
                <% end %>
              </li>
            </div>
            <div class="nav-list-item">
              <li>
                <%= link_to new_user_session_path do %>
                <i class="fa-solid fa-right-to-bracket"></i>Log in
                <% end %>
              </li>
            </div>
          </div>


          <% end %>

          </ul>
        </div>
        </div>
      </div>


    </header>
    

    <main>
      
      
      <div class="text-success">
        <%= flash[:notice] %>
      </div>
      <div class="text-danger">
        <%= flash[:alret] %>
      </div>
      
      <%= yield %>
    </main>  

    <footer>
      <div class="container mt-5">
        <div class="row">
          <div class="mx-auto">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
