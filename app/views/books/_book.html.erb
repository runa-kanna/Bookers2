
    
<div class="col-md-3">
  
  <h2>User info!</h2>
  <%= image_tag @user.get_profile_image(100,100) %>
  <table class="table">
    <tbody>
      <tr>
        <th>name</th>
        <th><%= @user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= @user.introduction %></th>
      </tr>
    </tbody>
    </table>
  
    <div class="row">
      <div class="sccial"></div>
      <%= link_to edit_user_path(@user), class:"btn btn-outline-secondary btn-block" do %>
        <i class="fa-solid fa-user-gear"></i>
      <% end %>
    </div>
    
    
    <h2 class="mt-3">New book</h2>
    
    <% if @book.errors.any? %>
      <%= @book.errors.count %>errors prohibited this obj from being saved
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
    <% end %>
   
    <%= form_with model: @book do |f| %>
      <div class="form-grop">
        <h4>Title</h4>
        <%= f.text_field :title %>
      </div>
      <div class="form-grop">
        <h4>Opinion</h4></h4>
        <%= f.text_area :body %>
      </div>
      <div class="form-grop">
        <input type="submit" name="commit" value="Create Book" Class="btn btn-success" date-disable-with="Create Book">
      </div>  
    <% end %>
      
</div>
  