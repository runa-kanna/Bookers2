<script src="https://kit.fontawesome.com/a8946225b7.js" crossorigin="anonymous"></script>

<main>
  <p id="notice">
    <div class="container px-5 px-sm-0">
      <div class="row">
        <div class="col-md-3">

          <h2>User info</h2>
          <%= image_tag @user.get_profile_image(100,100) %>
          <table class="table">
            <tbody>
              <tr>
                <th>name</th>
                <th><%= @user.name %></th>
              </tr>
              <tr>
                <th>introduction</th>
                <th><%= @user.introduction %></th>
              </tr>
            </tbody>
          </table>

          <div class="row">

            <div class="sccial"></div>


              <%= link_to edit_user_path(@user), class:"btn btn-outline-secondary btn-block" do %>
                <i class="fa-solid fa-user-gear"></i>
              <% end %>

          </div>

          <h2 class="mt-3">New book</h2>

            <%= form_with model: @book do |f| %>
            <div class="form-grop">
              <h4>Title</h4>
                <%= f.text_field :title %>
            </div>
            <div class="form-grop">
              <h4>Opinion</h4></h4>
                <%= f.text_area :body %>
            </div>
            <div class="form-grop">
              <input type="submit" name="commit" value="Create Book" Class="btn btn-success" date-disable-with="Create Book">
            <% end %>
            </div>
        </div>

        <div class="col-md-8 offset-md-1">
          <h2>Books</h2>

          <table class="table table-striped">
            <thead>
              <tr>
                <th></th>
                <th>Title</th>
                <th>Opinion</th>
              </tr>
            </thead>

            <tbody>
              <% @books.each do |book| %>
                <tr>
                  <td><%= image_tag book.user.get_profile_image(100,100) %></td>
                  <td><%= link_to book.title, book_path(book.id) %></td>
                  <td><%= book.body %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </p>
</main>
