<h1>Books</h1>

<div class="user-items">
  <h1>User info</h1>

    <div>
    <%= image_tag @user.get_profile_image(100,100) %>
    <% if @user == current_user %>

      <p>Name  <%= @user.name %></p>

      <p>Introduction  <%= @user.introduction %></p>

      <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
      <% end %>
    </div>


</div>

<div class="new">
  <h1>New book</h1>
  <% if @book.errors.any? %>
    <%= @book.errors.count %>件のエラーが発生しました
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>


  <%= form_with model: @book do |f| %>
    <h4>タイトル</h4>
    <%= f.text_field :title %>

    <h4>感想</h4>
    <%= f.text_area :body %>

    <%= f.submit 'Create Book' %>
  <% end %>
</div>

<div class="index">
  <h1>Books</h1>

    <% @books.each do |book| %>
    <p><%= image_tag book.user.get_profile_image(100,100) %></p>

    <p>Title</p>
    <span>
      <%= link_to book.title, book_path(book.id) %>
    </span>

    <p>Opinion</p>
    <span><%= book.body %></span>

  <% end %>
</div>


