  <p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

        <h1>Editing Book</h1>

        <%= form_with model: @book, url: update_book_path(@book.id), method: :patch do |f| %>

          <h4>Title</h4>
          <%= f.text_field :title %>

          <h4>Opinion</h4>
          <%= f.text_area :body %>

          <input type="submit" name="commit" value="Update Book" class="btn btn-success" data-disable-with="Update Book">

        <% end %>


        <a class= "/books/:id" >Show</a>
          |
        <a class="back" href="/books">Back</a>

      </div>
    </div>
  </div>