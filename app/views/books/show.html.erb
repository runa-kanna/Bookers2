
<main>
  <p id="notice">
    <div class="container px-5 px-sm-0">
      <div class="row">
        
        <%= render 'books/book', books:@user  %>
          
        <div class="col-md-8 offset-md-1">
          <h1>Book detail</h1>

          <table class="table">
            <tbody>
              <tr>
                <td>
                  <%= image_tag @book.user.get_profile_image(100,100) %>
                  <br>
                  <%= link_to @book.user.name, user_path(@user.id) %>
                </td>
                <td><%= link_to @book.title %></td>
                <td><%= @book.body %></td>
                <td>
                  <% if @book.user == current_user %>
                    <%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-sm btn-success edit_book_path" %>
                  <% end %>
                </td>
                <td>
                  <% if @book.user == current_user %>
                    <%= link_to "Delete", book_path(@book.id), class: "btn btn-sm btn-danger", method: :delete, "data-confirm" => "本当に削除しますか？" %>
                  <% end %>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </p>
</main>


