
<%= stylesheet_link_tag 'books' %>

<div class="user-items">
  <h1>User info</h1>

  <div>
    <%= image_tag @user.get_profile_image(100,100) %>
    <% if @user == current_user %>
  
      <p>Name  <%= @user.name %></p>
  
      <p>Introduction  <%= @user.introduction %></p>
  
      <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
      <% end %>
    </div>
    
</div>


<h1>Books date</h1>

<div>
  <p>Taitle:<%= @book.title %></p>
  <p>Opinion:<%= @book.body %></p>
  <p>投稿ユーザー画像：<%= image_tag @book.user.get_profile_image(100,100) %></p>
  <p>ユーザーネーム: <%= @book.user.name %></p>
  <%= link_to "編集", edit_book_path(@book.id) %>
  <%= link_to "削除", book_path(@book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
</div>

