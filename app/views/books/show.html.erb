
<main>
  <p id="notice">
    <div class="container px-5 px-sm-0">
      <div class="row">
        <div class="col-md-3">

          <h2>User info</h2>
          <%= image_tag @user.get_profile_image(100,100) %>
          <table class="table">
            <tbody>
              <tr>
                <th>name</th>
                <th><%= @user.name %></th>
              </tr>
              <tr>
                <th>introduction</th>
                <th><%= @user.introduction %></th>
              </tr>
            </tbody>
          </table>

          <div class="row">

            <div class="sccial"></div>

            <a class="btn btn-outline-secondary bnt-block "></a>
              <i class="fa-solid fa-user-gear"></i>
              <%= link_to "プロフィール編集", edit_user_path(@user) %>
          </div>

          <h2 class="mt-3">New book</h2>

            <%= form_with model: @book do |f| %>
            <div class="form-grop">
              <h4>Title</h4>
                <%= f.text_field :title %>
            </div>
            <div class="form-grop">
              <h4>Opinion</h4></h4>
                <%= f.text_area :body %>
            </div>
            <div class="form-grop">
              <input type="submit" name="commit" value="Create Book" Class="btn btn-success" date-disable-with="Create Book">
            <% end %>
            </div>
        </div>


        <div class="col-md-8 offset-md-1">
          <h1>Books detail</h1>

          <table class="table">
            <tbody>
              <tr>
                <td>
                  <%= image_tag @book.user.get_profile_image(100,100) %>
                  <br>
                  <%= link_to @book.user.name, user_path(@user.id) %>
                </td>
                <td><%= link_to @book.title %></td>
                <td><%= @book.body %></td>
                <td>
                    <%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-sm btn-success edit_book_path" %>
                </td>
                <td>
                  <%= link_to "Delete", book_path(@book.id), class: "btn btn-sm btn-danger", method: :delete, "data-confirm" => "本当に削除しますか？" %>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </p>
</main>


