<div class="user-items">
  <h1>User info</h1>

    <div>
    <%= image_tag @user.get_profile_image(100,100) %>
    <% if @user == current_user %>

      <p>Name  <%= @user.name %></p>

      <p>Introduction  <%= @user.introduction %></p>

      <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
      <% end %>
    </div>


</div>


<div class="new">
  <h1>New book</h1>
  <%= form_with model: @book do |f| %>
    <h4>タイトル</h4>
    <%= f.text_field :title %>

    <h4>感想</h4>
    <%= f.text_area :body %>

    <%= f.submit 'Create Book' %>
  <% end %>
</div>


<h1>Users</h1>

  <% @users.each do |user| %>
  
      <%= link_to user.name, user %>
      <%= image_tag @user.get_profile_image(100,100) %>
    
  <% end %>